<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.android_playground.HomeFragment"
        android:label="@string/home_label"
        tools:layout="@layout/home_fragment"
        >
        <action
            android:id="@+id/action_nav_home_to_nav_gallery"
            app:destination="@id/nav_gallery" />
    </fragment>
    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.android_playground.GalleryFragment"
        android:label="@string/gallery_label"
        tools:layout="@layout/gallery_fragment" />
    <fragment
        android:id="@+id/nav_layout"
        android:name="com.example.android_playground.LayoutFragment"
        android:label="@string/layout_label"
        tools:layout="@layout/layout_fragment" />
</navigation>